    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/minicart.js" asp-append-version="true"></script>
    <script src="~/js/JS.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
